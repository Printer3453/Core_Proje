@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
</div>

@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
{
    @Html.HiddenFor(model => model.SkillID)
    <div class="form-group">
        @Html.Label("Yetenek Başlığı")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Yetenek Başlığı" })
    </div>
    <div class="form-group">
        @Html.Label("Yetenek Oranı")
        @Html.TextBoxFor(model => model.Value, new { @class = "form-control", @placeholder = "Yetenek Oranı" })
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
}
