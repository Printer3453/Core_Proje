@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead >
                        <tr>
                            <th>Platform</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th>Tamamlanma Oranı</th>
                            <th>Sil</th>
                            <th >Düzlenle</th>
                        </tr>
                    </thead>
                    
                    <tbody class="list">
                        @foreach (var item in Model)
                        {

                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Price
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-success"></i>
                                        <span class="status">Tamamlandı</span>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value%"
                                                     aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>

                                    <a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger"
                                       onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?');">Sil</a>
                                </td>

                                <td>
                                    <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-warning">Düzenle</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
               
                <a href="/Portfolio/AddPortfolio/" class="btn btn-outline-info">Yeni Proje Ekle</a>
            </div>
        </div>
    </div>
</div>

