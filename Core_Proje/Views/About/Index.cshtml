@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hakkımda Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(model => model.AboutID)
    <br />
    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Başlık" })
    </div>
    <div class="form-group">
        @Html.Label("Yaş")
        @Html.TextBoxFor(model => model.Age, new { @class = "form-control", @placeholder = "Yaş" })
    </div>
    <div class="form-group">
        @Html.Label("Mail")
        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @placeholder = "Mail" })
    </div>
    <div class="form-group">
        @Html.Label("Telefon")
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Telefon" })
    </div>
    <div class="form-group">
        @Html.Label("Adres")
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Adres" })
    </div>
    <div class="form-group">
        @Html.Label("ImageUrl")
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", @placeholder = "ImageUrl" })
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(model => model.Description,10,2, new { @class = "form-control", @placeholder = "Açıklama" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
}

