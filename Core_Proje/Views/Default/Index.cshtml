            font-style: italic;
            color: #888;
            font-size: 12px;
            margin-bottom: 10px;
            display: none;
        }
    </style>

    <div id="faruk-ai-btn" onclick="toggleChat()">
        <svg viewBox="0 0 24 24"><path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z" /></svg>
    </div>

    <div id="faruk-ai-window">
        <div class="ai-header">
            <h4>🤖 Faruk AI Asistan</h4>
            <div class="ai-close" onclick="toggleChat()">&times;</div>
        </div>
        <div class="ai-body" id="ai-messages">
            <div class="message ai">
                Merhaba! Ben Faruk'un dijital asistanıyım. Projeler veya kodlar hakkında bana soru sorabilirsin. 👋
            </div>
        </div>
        <div class="typing-indicator" id="ai-typing">Faruk AI düşünüyor...</div>
        <div class="ai-footer">
            <input type="text" id="ai-input" placeholder="Bir soru sor..." onkeypress="handleEnter(event)">
            <button onclick="sendMessage()" id="ai-send-btn">Gönder</button>
        </div>
    </div>

    <script>
        function toggleChat() {
            const window = document.getElementById('faruk-ai-window');
            if (window.style.display === 'none' || window.style.display === '') {
                window.style.display = 'flex';
                document.getElementById('ai-input').focus();
            } else {
                window.style.display = 'none';
            }
        }

        function handleEnter(e) {
            if (e.key === 'Enter') sendMessage();
        }

        async function sendMessage() {
            const input = document.getElementById('ai-input');
            const messagesDiv = document.getElementById('ai-messages');
            const typingDiv = document.getElementById('ai-typing');
            const sendBtn = document.getElementById('ai-send-btn');

            const text = input.value.trim();
            if (!text) return;

            // 1. Kullanıcı mesajını ekrana bas
            appendMessage(text, 'user');
            input.value = '';
            input.disabled = true;
            sendBtn.disabled = true;

            // 2. "Yazıyor..." göster
            typingDiv.style.display = 'block';
            messagesDiv.scrollTop = messagesDiv.scrollHeight;

            try {
                // 3. Backend'e istek at
                const response = await fetch('/api/aichat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: text })
                });

                if (!response.ok) throw new Error("API Hatası");

                const data = await response.json();

                // 4. Cevabı ekrana bas
                // Basit bir Markdown -> HTML dönüşümü (Kod blokları için)
                let formattedReply = formatMessage(data.reply);
                appendMessage(formattedReply, 'ai', true);

            } catch (error) {
                appendMessage("Üzgünüm, şu an bağlantıda bir sorun var. Lütfen Llama'nın açık olduğundan emin ol.", 'ai');
                console.error(error);
            } finally {
                typingDiv.style.display = 'none';
                input.disabled = false;
                sendBtn.disabled = false;
                input.focus();
            }
        }

        function appendMessage(text, sender, isHtml = false) {
            const messagesDiv = document.getElementById('ai-messages');
            const msgDiv = document.createElement('div');
            msgDiv.className = `message ${sender}`;

            if (isHtml) msgDiv.innerHTML = text; // AI cevabı HTML olabilir
            else msgDiv.innerText = text;        // Kullanıcı mesajı düz metin

            messagesDiv.appendChild(msgDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight; // En alta kaydır
        }

        // Basit formatter: ```kod``` bloklarını <pre> yapar
        function formatMessage(text) {
            // Yeni satırları <br> yap
            let html = text.replace(/\n/g, '<br>');

            // Kod bloklarını yakala (Basit regex)
            // ```csharp ... ``` yapısını yakalar
            html = html.replace(/```(.*?)<br>(.*?)<br>```/gs, '<pre><code>$2</code></pre>');

            return html;
        }
    </script>



