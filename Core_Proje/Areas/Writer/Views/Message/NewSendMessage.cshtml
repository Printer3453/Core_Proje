@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "NewSendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>
<br />
<form class="form-group" >

    @Html.Label("Alıcı E-Posta Adresi")
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", placeholder = "Alıcı E-Posta Adresini Giriniz" })
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Konu Başlığını Giriniz" })
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", placeholder = "Mesajınızı Giriniz", rows = "5" })
    <br />
    <button type="submit" class="btn btn-primary">Gönder</button>

</form>
