@using EntityLayer.Concrete
@model List<Announcement>
@{
    string color = "";
    string icon = "";
}

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>
    @foreach( var item in Model)
{
    

    if (item.Status == "Yeni Yazı")
    {
        color = "preview-icon bg-success";
        icon = "ti-pencil-alt";
    }
    else if (item.Status == "Duyuru")
    {
        color = "preview-icon bg-warning";
        icon = "ti-announcement";
    }
    else if (item.Status == "Bilgilendirme")
    {
        color = "preview-icon bg-info";
        icon = "ti-info-alt";
    }
    else if (item.Status == "Önemli")
    {
        color = "preview-icon bg-danger";
        icon = "ti-alert";
    }
    else if (item.Status == "Yeni Video")
    {
        color = "preview-icon bg-dark";
        icon = "ti-video-camera";
    }
    else if (item.Status == "Konferans")
    {
        color = "preview-icon bg-secondary";
        icon = "ti-microphone";
    }
    else if (item.Status == "Workshop")
    {
        color = "preview-icon bg-info";
        icon = "ti-blackboard";
    }
    else if (item.Status == "Bootcamp")
    {
        color = "preview-icon bg-primary";
        icon = "ti-crown";
    }
    else
    {
        color = "preview-icon bg-light";
        icon = "ti-info";
    }
      
        <a class="dropdown-item preview-item" href="/Writer/Default/AnnouncementDetails/@item.ID">
        <div class="preview-thumbnail">
            <div class="@color">
                <i class="@icon mx-0"></i>
            </div>
        </div>
        <div class="preview-item-content">
            <h6 class="preview-subject font-weight-normal">@item.Title</h6>
            <p class="font-weight-light small-text mb-0 text-muted">
                @item.Status
            </p>
        </div>
    </a>
}